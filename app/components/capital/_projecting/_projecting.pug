.freshfree-projecting(
  class=getModifiers('freshfree-page__nest', ['projecting'])
)
  - const PROJECTING_ASIDE_PICTURES = ['Ветка', 'Орехи и сухофрукты'];
  mixin freshfree-projecting__picture--flow(number)
    +freshfree-s_picture()(
      class=getModifiers('freshfree-projecting__picture', [`flow-${number}`]),
      src=`img/freshfree-projecting__image--flow-${number}.jpg`,
      alt=`Пример страницы №${number}`,
    )
  .freshfree-s_container.freshfree-projecting__container
    .freshfree-s_textblock.freshfree-projecting__textblock
      h2(class=[
        getModifiers('freshfree-s_headline', ['small']),
        'freshfree-s_textblock__headline',
        'freshfree-projecting__headline',
      ]) Проектирование сайта
      p.freshfree-s_paragraph(class=[
        getModifiers('freshfree-s_textblock__paragraph', ['last']),
        'freshfree-projecting__paragraph',
      ]) При проектировании проекта основное значение уделили позиционированию товара. Продукты мы решили#[br]разделить на категории, в зависимости от получаемых результатов от применения.
    +freshfree-projecting__picture--flow(1)
    .freshfree-projecting__inner-wrapper
      +freshfree-projecting__picture--flow(2)
    each picture, index in PROJECTING_ASIDE_PICTURES
       - const number = index + 1;
       +freshfree-s_picture()(
          class=getModifiers(
            'freshfree-projecting__picture',
            ['aside', `aside-${number}`]
          ),
          src=`img/freshfree-projecting__image--aside-${number}.png`,
          alt=picture,
          role='presentation',
       )
